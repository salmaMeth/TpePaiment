<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
 	.mainPanel {
                      border: 2px solid black;
           
        }
.textBox {
		width: 263px !important;
	}

	</ui:style>

<g:HTMLPanel styleName="{style.mainPanel}" ui:field="container">
<div class="row-fluid ">
<div class="span12">
<div class="content-widgets gray">
<div class="widget-head blue clearfix">
<h3 class="pull-left">Get Password </h3>
</div>
<div class="widget-container">
<form class="form-horizontal"></form>
<h5>To get your password, enter your e-mail address below:</h5>
<div class="control-group">
<label class="control-label">Mail address</label>
<div class="controls">
<div class="controls input-icon">
<i class="icon-envelope"></i>
<g:TextBox ui:field="txt_mail" styleName="{style.textBox}" />
<div class="error">
<g:Label  ui:field="lbl_error" text="">></g:Label></div>
</div></div>
<div class="controls">
<div class="pull-right">
<g:Button ui:field="bnt_send" >Send</g:Button>
<g:Button ui:field="bnt_cancle">Cancel</g:Button>
</div>
</div>
</div>
</div>
</div>
</div>
</div>





	</g:HTMLPanel>
</ui:UiBinder> 